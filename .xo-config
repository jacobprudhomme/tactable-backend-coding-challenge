{
  "envs": ["es2020", "node"],
  "space": true,
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-unassigned-import": [
      "warn",
      {
        "allow": ["reflect-metadata"]
      }
    ],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["StrictPascalCase"],
        "prefix": ["I"]
      }
    ],
    "@typescript-eslint/object-curly-spacing": [
      "warn",
      "always"
    ]
  }
}
